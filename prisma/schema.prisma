// Secure Keys Management System - Prisma Schema
// Optimized for PlanetScale (MySQL)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String   // bcrypt hashed
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  permissions Permission[]
  auditLogs   AuditLog[]
  createdProjects Project[] @relation("CreatedBy")

  @@index([username])
  @@index([email])
}

// Project Model (Folders)
model Project {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdBy   User         @relation("CreatedBy", fields: [createdById], references: [id])
  keys        Key[]
  permissions Permission[]
  auditLogs   AuditLog[]

  @@index([createdById])
  @@index([name])
}

// Key Model (Encrypted Keys/Credentials)
model Key {
  id          String   @id @default(cuid())
  projectId   String
  keyName     String
  keyValue    String   @db.Text // Encrypted value
  keyType     KeyType  @default(ENV)
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project     Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  auditLogs   AuditLog[]

  @@index([projectId])
  @@index([keyName])
}

// Permission Model (Access Control)
model Permission {
  id        String      @id @default(cuid())
  userId    String
  projectId String
  access    AccessLevel @default(READ)
  createdAt DateTime    @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
  @@index([userId])
  @@index([projectId])
}

// Audit Log Model (Track all access)
model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  projectId String?
  keyId     String?
  action    String   // "VIEW_KEY", "CREATE_PROJECT", "LOGIN", etc.
  details   String?  @db.Text
  ipAddress String?
  timestamp DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  key     Key?     @relation(fields: [keyId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([projectId])
  @@index([timestamp])
}

// Enums
enum Role {
  ADMIN
  USER
}

enum AccessLevel {
  READ
  WRITE
  VIEW
  EDIT
  ADMIN
  NONE
}

enum KeyType {
  API
  SSH
  ENV
  DATABASE
  OTHER
}
